= form_for @book_record do |f|
  - if @book_record.errors.any?
    #error_explanation
      %h2= "#{pluralize(@book_record.errors.count, "error")} prohibited this book_record from being saved:"
      %ul
        - @book_record.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :client_id
    = f.number_field :client_id
  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :project_id
    = f.number_field :project_id
  .field
    = f.label :department_id
    = f.text_field :department_id
  .field
    = f.label :price
    = f.text_field :price
  .actions
    = f.submit 'Save'
