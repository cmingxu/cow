= form_for @huxing do |f|
  - if @huxing.errors.any?
    #error_explanation
      %h2= "#{pluralize(@huxing.errors.count, "error")} prohibited this huxing from being saved:"
      %ul
        - @huxing.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :client_id
    = f.number_field :client_id
  .field
    = f.label :created_by
    = f.number_field :created_by
  .field
    = f.label :desc
    = f.text_area :desc
  .actions
    = f.submit 'Save'
