= form_for [:admin, @huxing], :class => "form form-horizontal" do |f|

  = control_group_helper "项目名称", "例如: 关于xxx的通知", f.object.errors[:title].first do
    = f.text_field :name

  = control_group_helper "项目描述", "例如: 关于xxx的通知", f.object.errors[:title].first do
    = f.text_area :desc

  .actions
    = f.submit '保存', :class => "btn btn-primary"
    = link_to "返回", admin_huxings_path, :class => "btn btn-primary"
