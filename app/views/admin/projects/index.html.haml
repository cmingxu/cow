%legend 
  所有项目
  - if current_user.can_create_project?
    %span.pull-right
      = link_to icon_link(:plus) + "  新项目", new_admin_project_path

%table.table.table-stripped
  %thead
    %th 项目名称
    %th 项目地址
    %th

  - @projects.each do |project|
    %tr
      %td= link_to project.title, admin_project_path(project)
      %td= project.address
      %td


= paginate @projects
