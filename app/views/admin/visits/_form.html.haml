= form_for @visit do |f|
  - if @visit.errors.any?
    #error_explanation
      %h2= "#{pluralize(@visit.errors.count, "error")} prohibited this visit from being saved:"
      %ul
        - @visit.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :visit_type
    = f.text_field :visit_type
  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :desc
    = f.text_area :desc
  .actions
    = f.submit 'Save'
