= form_for @department do |f|
  - if @department.errors.any?
    #error_explanation
      %h2= "#{pluralize(@department.errors.count, "error")} prohibited this department from being saved:"
      %ul
        - @department.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :size
    = f.text_field :size
  .field
    = f.label :chaoxiang
    = f.text_field :chaoxiang
  .field
    = f.label :client_id
    = f.number_field :client_id
  .field
    = f.label :project_id
    = f.number_field :project_id
  .field
    = f.label :created_by
    = f.number_field :created_by
  .actions
    = f.submit 'Save'
